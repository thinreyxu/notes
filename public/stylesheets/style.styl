@import 'variables'
@import 'reset'
@import 'common'


// ================================= 
//  Site Specific Rules
// =================================

.container
  // width 900px
  margin 0 auto

.header
  text-align center

.footer
  text-align center
  color #999

.nav
  text-align center
  margin-bottom 40px;
  a
    margin 0 0.5em

.content
  @extend .clearfix

.note
  position relative
  overflow hidden
  box-sizing border-box
  border solid 1px $bordercolor
  border-radius 10px
  background #fff
  // box-shadow 0 0 5px $shadowcolor

.note-head
  @extend .clearfix
  border-bottom solid 1px darken($lightbgcolor, 2)
  padding 1em
  background $lightbgcolor
  .ts
    @extend .small
    @extend .text-muted
    line-height 1.61em
  .title
    @extend .heading
    display block
    overflow hidden
    &:empty
      display none

.note-body
  @extend .text
  padding 0 1em
  margin 1em 0
  overflow hidden
  font-family $serif
  text-align justify
  p
    margin 0

.note-foot
  padding 0 20px
  text-align right

// 详细
.note-detail
  .note
    width 45em
    center-block()
  .note-head
    .title
      margin-top 0.5em
      text-align center
  .note-body
    min-height 25em
  .btn-wrapper
    position absolute
    right 1em
    top 1em

// 列表
.note-list
  @extend .ibw
  margin-left auto
  margin-right auto
  max-width 1500px
  .note
    @extend .ib
    @extend .text-left
    width 20em
    margin 0.71em
    padding-bottom: 1em
  .note-head
    .ts
      margin-right 1em
      float left
    .title
      white-space nowrap
      text-overflow ellipsis
  .note-body
    @extend .summary
    height 10.8em

.form-addEdit
  .form-control
    border-radius 0
    border-width 0
    box-shadow none
    background transparent
    outline none
  .inputTitle
    @extend .heading
    border-width 0 0 1px
    padding 0 0.2em 0.1em
    width 360px
    text-align center
    line-height 1
  .inputNote
    @extend .text
    padding 0
    width 100%
    height 100%
    background-image -webkit-linear-gradient(top, transparent 0, transparent 31px, $bordercolor 32px);
    background-size 100% 32px
    background-repeat repeat
    background-attachment local

// for num in (1 .. 3)
//   .rotate-{num}
//     transform rotate(num * 1deg)
// for num in (-3 .. -1)
//   .rotate-{num}
//     transform rotate(num * 1deg)

.flash
  @extend .text-center
  position fixed
  top 0
  left 50%
.flash-inner
  border-radius 0 0 2px 2px
  padding 0 8px
  background $basecolor
  color #fff
  position relative
  left -50%

@media (max-width: 619px) 
  body
    font-size 18px
    min-width 360px
  .note-list,
  .note-detail
    margin-left 10px
    margin-right 10px
  .note-list .note-body
      max-height 150px
      height auto
  .note-list .note,
  .note-detail .note
    font-size: 18px
    display block
    margin-left 0
    margin-right 0
    width auto
    transform none
  .note-detail
    .note-body
      min-height initial
    .admin .note-head
      .title
        margin-right 0
         
  .form-addEdit
    .inputNote
      background-image -webkit-linear-gradient(top, transparent 0, transparent 44px, $bordercolor 45px);
      background-size 100% 45px

@media (min-width: 620px)
  .note-list
    width 600px

@media (min-width: 920px)
  .note-list
    width 900px

@media (min-width: 1220px)
  .note-list
    width 1200px

@media (min-width: 1520px)
  .note-list
    width 1500px
